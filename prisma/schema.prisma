generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum ComputerType {
  PURCHASED
  BUILT
}

enum PartCategory {
  CPU
  GPU
  MOTHERBOARD
  RAM
  STORAGE
  PSU
  CASE
}

model Computer {
  id        Int          @id @default(autoincrement())
  name         String
  type         ComputerType
  notes        String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  parts Part[]
}

model Part {
  id               Int          @id @default(autoincrement())
  category         PartCategory
  brand            String
  model            String
  notes            String?
  specs            Json?
  originComputerId Int
  originComputer   Computer     @relation(fields: [originComputerId], references: [id])
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
}
